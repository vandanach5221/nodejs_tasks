<%- include ../layouts/header.ejs %>    
 
<% if (messages.error) { %>
    <p style="color:red"><%- messages.error %></p>
<% } %>
 
<% if (messages.success) { %>
    <p style="color:green"><%- messages.success %></p>
<% } %>
 
<form action="/tasks/add" method="post" name="form1">
    <table width="25%" border="0">
        <tr> 
            <td>Task Name</td>
            <td><input type="text" name="task_name" id="task_name" value="<%= task_name %>" /></td>
        </tr>
        <tr> 
            <td></td>
            <td><input type="submit" name="Submit" value="Add" /></td>
        </tr>
    </table>
</form>
 
